<div class="container">
  <div class="row">
    <%= form_tag auth_login_path, method: :post, class: 'col s12' do %>
    <div class="card">
      <div class="card-content">
        <h4 class="activator grey-text text-darken-4">Login</h4>
        <p>Welcome to our application</p>
        <% if flash[:error] %>
          <%= flash[:error] %>
        <% end %>
      </div>
      <div class="card-content ">
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">email</i>
            <%= email_field_tag :email, nil, class: 'validate' %>
            <%= label_tag :email%>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">lock_open</i>
            <%= password_field_tag :password, nil, class:'validate' %>
            <%= label_tag :password %>
          </div>
        </div>

      </div>
      <div class="card-action">
        <%= submit_tag 'Login', class: 'waves-effect waves-light btn'%>

        <%= link_to 'Register', '#', class:'grey white-text waves-effect waves-light btn' %><br/>
        or<br/>
        <%= link_to '/auth/facebook', class:'light-blue darken-4 white-text waves-effect waves-light btn' do %>
        <i class="fa fa-facebook-official" aria-hidden="true"></i> Login with Facebook
        <% end %>
        <%= link_to '/auth/facebook', class:'red lighten-1 darken-4 white-text waves-effect waves-light btn' do %>
        <i class="fa fa-google" aria-hidden="true"></i> Login with Google
        <% end %>
        <%= link_to '/auth/facebook', class:'blue-grey darken-3 white-text waves-effect waves-light btn' do %>
        <i class="fa fa-github" aria-hidden="true"></i> Login with Github
        <% end %>
      </div>

    </div>
    <% end %>
  </div>
</div>
